{{>header}}
<div class="row event-details">
    <div class="col-md-12 text-center overflow-hidden">

      <img class="details-img"
        src="{{imageURL}}" />
      <div class="my-3 p-3">
        <h2 class="display-5">{{name}}</h2>
        <p class="infoType">Description:</p>
        <p class="event-description">{{description}}</p>
        <p class="infoType">Date: <small>30 July</small></p>
        <p class="infoType">Peope interested in: <small>{{{peopleInterested}}}</small></p>
        <p class="infoType">Organizer: <small>{{organizer.username}}</small></p>
      </div>
      {{#if isAuthor}}
      <a href="/edit/{{eventId}}" class="btn btn-primary btn-lg">Edit the event</a>
      <a href="/close/{{eventId}}" class="btn btn-danger btn-lg">Close the event</a>
      {{/if}}
      <a href="/join/{{eventId}}" class="btn btn-info btn-lg">Join the event</a>
    </div>
  </div>
{{>footer}}